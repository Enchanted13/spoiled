{
  "manifest_version": 2,

  "name": "Spoiler Spoiler",
  "description": "This extension blocks content containing user-specified keywords.",
  "version": "1.0",

  "content_scripts": [
     {
       "matches": ["http://*/*", "https://*/*"],
       "css": ["style.css"],
       "js": ["content_script.js"],
       "run_at": "document_end"
     }
   ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons" : {
    "48" : "icon.png",
    "128" : "icon.png"
  },

  "permissions": [
    "declarativeContent",
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}
