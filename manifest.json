{
  "manifest_version": 2,

  "name": "Spoiler Spoiler",
  "description": "This extension blocks content containing user-specified keywords.",
  "version": "1.0",

  "background" : {
    "scripts": [
      "content_script.js"
    ],
    "persistent": false
  },

  "page_action" :
  {
    "default_icon" : "icon.png",
    "default_title" : "There's a <video> in this page!"
  },

  "icons" : {
    "48" : "icon.png",
    "128" : "icon.png"
  },

  "permissions": [
    "declarativeContent",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
